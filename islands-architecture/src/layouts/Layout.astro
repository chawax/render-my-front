---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-black p-4 sticky top-0">
      <a href="/">
        <h1 class="text-3xl text-white font-bold">My Movies</h1>
      </a>
      <span class="text-white">Islands Architecture</span>
    </header>
    <main class="p-4">
      <slot />
    </main>
  </body>
</html>
